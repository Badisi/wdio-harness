{
    "name": "@badisi/wdio-harness",
    "description": "WebdriverIO support for Angular component test harnesses.",
    "homepage": "https://github.com/badisi/wdio-harness",
    "license": "MIT",
    "author": {
        "name": "Badisi"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/badisi/wdio-harness.git"
    },
    "keywords": [
        "angular",
        "cdk",
        "components",
        "test",
        "testing",
        "harness",
        "harnesses",
        "test-harnesses",
        "wdio",
        "webdriver",
        "webdriverio"
    ],
    "private": true,
    "scripts": {
        "ncu": "npx npm-check-updates -i --format=group --packageFile '{,projects/**/}package.json'",
